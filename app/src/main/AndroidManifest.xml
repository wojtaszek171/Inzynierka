<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.pollub.android.shoppinglist">

    <application
        android:name=".Main"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainScreen" />
        <activity android:name=".activity.LogInto" />
        <activity android:name=".activity.Register" />
        <activity android:name=".activity.ListsList" />
        <activity android:name=".activity.ListItems" />
        <activity android:name=".activity.BuddiesActivity" />
        <activity android:name=".activity.AddFriend" />
        <activity android:name=".activity.Add_Product" />
        <activity android:name=".activity.Settings" />
        <activity android:name=".activity.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Templates" />
        <activity android:name=".activity.TemplatesList"></activity>
    </application>

</manifest>