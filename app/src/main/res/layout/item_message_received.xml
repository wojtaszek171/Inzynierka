<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp">

        <TextView
            android:id="@+id/r_profile_image"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="8dp"
            android:text="JK"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/rounded_message_avatar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/r_friend_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:text="Jan Kowalski"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/r_profile_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/r_message_body_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/rounded_message_rectangle_light"
            android:maxWidth="240dp"
            android:padding="8dp"
            android:text="Kupiłaś chleb?"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@+id/r_profile_image"
            app:layout_constraintTop_toBottomOf="@+id/r_friend_name_text" />

        <TextView
            android:id="@+id/r_message_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="19:25"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/r_message_body_text"
            app:layout_constraintLeft_toRightOf="@+id/r_message_body_text" />

    </android.support.constraint.ConstraintLayout>
</layout>
